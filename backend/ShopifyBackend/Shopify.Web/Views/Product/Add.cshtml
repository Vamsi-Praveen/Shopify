

<div class="p-3 flex flex-col gap-2">
    <h1 class="font-medium text-lg">Add New Product</h1>
    <div class="bg-white p-4 pl-6 border border-gray-200 rounded-[5px] shadow-sm">
        <div class="w-2/3">
            <form method="post" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                    <input type="text" placeholder="e.g. John Doe"
                    class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Product Description</label>
                    <textarea rows="5" placeholder="Enter Description"
                              class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none"></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Short Description</label>
                    <textarea rows="3" placeholder="Enter Short Description"
                              class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none"></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                    <select class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none">
                       <option>Select Category</option>
                       <option>Milk</option>
                       <option>Oil</option>
                       <option>Vegatables</option>
                       <option>Snacks</option>
                       <option>Millets</option>
                    </select>
                </div>
                @* TODO: Based on the Category need to display the brands *@
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Brand</label>
                    <select class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none">
                        <option>Select Category</option>
                        <option>Amul</option>
                        <option>Sunflower</option>
                        <option>MTR</option>
                        <option>Ashrivad</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Base Price</label>
                    <input type="number" placeholder="e.g. 200"
                           class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Selling Price</label>
                    <input type="number" placeholder="e.g. 190"
                           class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Unit Of Measure</label>
                    <select class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none">
                        <option>Select Measure</option>
                        <option>Litre</option>
                        <option>KG</option>
                        <option>G</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Featured Product</label>
                    <select class="w-full px-3 py-2 border border-gray-200 rounded-sm outline-none">
                        <option>Select</option>
                        <option>Yes</option>
                        <option>No</option>
                        <option>Not Applicable</option>
                    </select>
                </div>
                <div>
                    <button type="submit"
                            class="bg-emerald-600 hover:bg-emerald-700 transition text-white rounded-sm px-2 py-1.5 cursor-pointer">
                        Add Product
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>